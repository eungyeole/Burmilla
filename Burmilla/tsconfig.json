{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es6", "esnext", "dom"],
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "assets/*": ["src/assets/*"],
      "api/*": ["src/data/api/*"],
      "modules": ["src/data/modules/*"],
      "components/*": ["/src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "page/*": ["src/page/*"],
      "styles/*": ["src/styles/*"],
      "utils/*": ["src/utils/*"]
    },
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
